{
    "title": "Schema for Executing NodeJS apps",
    "description": "NodeJS execution options",
    "type": "object",
    "properties": {
      "config": {
        "type": "string",
        "description": "The serverless.yml location"
      },
      "location": {
        "type": "string",
        "description": "The src file location"
      },
      "host": {
        "type": "string",
        "description": "The host to inspect the process on"
      },
      "port": {
        "type": "number",
        "default": "7777",
        "description": "The port to inspect the process on. Setting port to 0 will assign random free ports to all forked processes."
      }
    },
    "additionalProperties": false,
    "required": ["config", "location"]
  }
  
  